    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterView"
    BackgroundColor="#FFF1DB">
    <VerticalStackLayout>
        <Grid>


            <!--  Main Content  -->
            <VerticalStackLayout Padding="20" IsEnabled="{Binding NotInServerCall}">
                <!--  Photo  -->
