<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShiftItUpApp.Views.SubmitShiftsView"
             Title="Submit Shifts">
    <VerticalStackLayout>
        <Picker Title="בחר שבוע"
                  ItemDisplayBinding="{Binding ., StringFormat='{0:dd/MM/yyyy}'}"
                ItemsSource="{Binding Sundays}"
                SelectedItem="{Binding SelectedSunday ,Mode=TwoWay}"
               
                FontSize="Medium" />

<!--date picker-->


        <Label Text="Shift Availability"
               FontSize="Medium"
               HorizontalOptions="Start"
               Margin="0,20,0,5"/>

        <Entry Text="{Binding Remarks, Mode=TwoWay}"
               Placeholder="Your Availability..."
               BackgroundColor="White"
               TextColor="Black"
               HeightRequest="100"
               VerticalOptions="Start"
               HorizontalOptions="Fill"
               MaxLength="250"
               Margin="0,0,0,10"/>

        <!-- הודעת שגיאה במקרה של שדה ריק -->
        <Label Text="{Binding RemarksError}"
               TextColor="Red"
               FontSize="Small"
               IsVisible="{Binding ShowRemarksError}"
               HorizontalOptions="Start"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Save" Command="{Binding SaveCommand}" IsEnabled="{Binding NotInServerCall}"  Grid.Column="1"  />
            <Button Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding NotInServerCall}"   />
        </Grid>

    </VerticalStackLayout>
</ContentPage>